<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Root menu -->
  <menuitem id="waran_menu_root" name="Waran-Hosp" sequence="5"/>
  <menuitem id="waran_menu_registration" name="Registration" parent="waran_menu_root" sequence="10"/>

  <!-- ACTION (must exist before menu uses it) -->
  <record id="waran_patient_action" model="ir.actions.act_window">
    <field name="name">Patients</field>
    <field name="res_model">waran.patient</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu uses the action above -->
  <menuitem id="waran_menu_patient"
            name="Patients"
            parent="waran_menu_registration"
            action="waran_his_core.waran_patient_action"
            sequence="10"/>
  <!-- Add a Settings menu id that other modules (AI) can reference -->
  <menuitem id="waran_menu_settings"
            name="Settings"
            parent="waran_menu_root"
            sequence="90"/>
</odoo>
