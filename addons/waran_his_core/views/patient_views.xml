<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="waran_patient_tree" model="ir.ui.view">
    <field name="name">waran.patient.tree</field>
    <field name="model">waran.patient</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="internal_id"/>
        <field name="sex"/>
        <field name="dob"/>
        <field name="phone"/>
      </tree>
    </field>
  </record>

  <record id="waran_patient_form" model="ir.ui.view">
    <field name="name">waran.patient.form</field>
    <field name="model">waran.patient</field>
    <field name="arch" type="xml">
      <form string="Patient">
        <sheet>
          <group>
            <field name="name"/>
            <field name="internal_id" readonly="1"/>
            <field name="sex"/>
            <field name="dob"/>
            <field name="phone"/>
            <field name="address"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
