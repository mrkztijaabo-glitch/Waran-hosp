<odoo>
    <record id="waran_formulary_view_tree" model="ir.ui.view">
        <field name="name">waran.formulary.tree</field>
        <field name="model">waran.formulary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="drug_name"/>
                <field name="strength"/>
                <field name="route"/>
            </tree>
        </field>
    </record>
    <record id="waran_formulary_view_form" model="ir.ui.view">
        <field name="name">waran.formulary.form</field>
        <field name="model">waran.formulary</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="drug_name"/>
                        <field name="strength"/>
                        <field name="route"/>
                        <field name="atc_code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="waran_formulary_action" model="ir.actions.act_window">
        <field name="name">Formulary</field>
        <field name="res_model">waran.formulary</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
