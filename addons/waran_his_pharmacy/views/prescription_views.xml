<odoo>
    <record id="waran_prescription_view_form" model="ir.ui.view">
        <field name="name">waran.prescription.form</field>
        <field name="model">waran.prescription</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="encounter_id"/>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="drug_id"/>
                                    <field name="dose"/>
                                    <field name="frequency"/>
                                    <field name="duration"/>
                                    <field name="instructions"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="waran_prescription_action" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">waran.prescription</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
